        </div>
      </div>

      <!-- Abas -->
      <div class="rounded-2xl border border-amber-200 bg-white shadow-sm">
        <div class="flex flex-wrap gap-2 border-b border-amber-100 p-2" role="tablist" aria-label="Abas de lançamentos">
          <button id="tab-receitas" role="tab" aria-selected="true" aria-controls="panel-receitas"
            class="tab-btn px-4 py-2 rounded-xl font-semibold bg-amber-700 text-white focus-visible:outline-none">
            Receitas
          </button>
          <button id="tab-despesas" role="tab" aria-selected="false" aria-controls="panel-despesas"
            class="tab-btn px-4 py-2 rounded-xl font-semibold hover:bg-amber-50 focus-visible:outline-none">
            Despesas
          </button>
        </div>

        <!-- Painel Receitas -->
        <div id="panel-receitas" role="tabpanel" aria-labelledby="tab-receitas" class="p-4">
          <form id="form-receita" class="grid md:grid-cols-4 gap-3 items-end" novalidate>
            <label class="block">
              <span class="text-sm font-medium">Data</span>
              <input type="date" required class="mt-1 w-full rounded-xl border-stone-300 focus:border-amber-600 focus:ring-amber-600" />
            </label>
            <label class="block md:col-span-2">
              <span class="text-sm font-medium">Descrição</span>
              <input type="text" placeholder="Venda de produto" required class="mt-1 w-full rounded-xl border-stone-300 focus:border-amber-600 focus:ring-amber-600" />
            </label>
            <label class="block">
              <span class="text-sm font-medium">Valor (R$)</span>
              <input type="number" min="0" step="0.01" placeholder="0,00" required class="mt-1 w-full rounded-xl border-stone-300 focus:border-amber-600 focus:ring-amber-600" />
            </label>
            <button type="submit" class="md:col-span-4 inline-flex justify-center rounded-2xl bg-emerald-700 px-5 py-3 text-white font-semibold shadow hover:bg-emerald-800 transition">
              Adicionar Receita
            </button>
          </form>

          <div class="mt-4 overflow-x-auto">
