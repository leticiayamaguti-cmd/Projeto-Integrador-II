    </div>
  </footer>

  <template id="row-template">
    <tr class="border-b last:border-0">
      <td class="py-2 pr-4 whitespace-nowrap"></td>
      <td class="py-2 pr-4"></td>
      <td class="py-2 pr-4 font-semibold"></td>
      <td class="py-2">
        <button type="button" class="remover inline-flex items-center rounded-lg border px-3 py-1 text-xs hover:bg-amber-50">
          Remover
        </button>
      </td>
    </tr>
  </template>

  <script>
  // Utilidades
  const moeda = (n) => (n ?? 0).toLocaleString('pt-BR', { style: 'currency', currency: 'BRL' });
  const byId = (id) => document.getElementById(id);

  // Estado (localStorage)
  const STORAGE_KEY = 'gestao-mei-facil:v1';
  const state = JSON.parse(localStorage.getItem(STORAGE_KEY) || '{"receitas":[],"despesas":[]}');
  const salvar = () => localStorage.setItem(STORAGE_KEY, JSON.stringify(state));

  // Elementos
  const valorReceitas = byId('valor-receitas');
  const valorDespesas = byId('valor-despesas');
  const valorSaldo = byId('valor-saldo');

  const tbodyReceitas = byId('tbody-receitas');
  const tbodyDespesas = byId('tbody-despesas');

  // Abas acessíveis
  const tabReceitas = byId('tab-receitas');
  const tabDespesas = byId('tab-despesas');
  const panelReceitas = byId('panel-receitas');
  const panelDespesas = byId('panel-despesas');

  function selecionarAba(aba) {
    const isReceitas = aba === 'receitas';
    tabReceitas.setAttribute('aria-selected', isReceitas);
    tabDespesas.setAttribute('aria-selected', !isReceitas);
    panelReceitas.classList.toggle('hidden', !isReceitas);
    panelDespesas.classList.toggle('hidden', isReceitas);

    tabReceitas.classList.toggle('bg-amber-700', isReceitas);
    tabReceitas.classList.toggle('text-white', isReceitas);
    tabDespesas.classList.toggle('bg-amber-700', !isReceitas);
    tabDespesas.classList.toggle('text-white', !isReceitas);
  }

  tabReceitas.addEventListener('click', () => selecionarAba('receitas'));
  tabDespesas.addEventListener('click', () => selecionarAba('despesas'));
  tabReceitas.addEventListener('keyup', (e) => { if (e.key === 'ArrowRight') selecionarAba('despesas'); });
  tabDespesas.addEventListener('keyup', (e) => { if (e.key === 'ArrowLeft') selecionarAba('receitas'); });

  // Renderização
  function render() {
    // Totais
    const totalReceitas = state.receitas.reduce((acc, it) => acc + it.valor, 0);
    const totalDespesas = state.despesas.reduce((acc, it) => acc + it.valor, 0);
    const saldo = totalReceitas - totalDespesas;

    valorReceitas.textContent = moeda(totalReceitas);
    valorDespesas.textContent = moeda(totalDespesas);
    valorSaldo.textContent = moeda(saldo);

    // Tabelas
    const tpl = document.getElementById('row-template');

    tbodyReceitas.innerHTML = '';
    state.receitas
      .sort((a,b) => a.data.localeCompare(b.data))
      .forEach((it, idx) => {
        const row = tpl.content.cloneNode(true);
        const tds = row.querySelectorAll('td');
        tds[0].textContent = it.data;
        tds[1].textContent = it.desc;
        tds[2].textContent = moeda(it.valor);
        const btn = row.querySelector('button.remover');
        btn.setAttribute('aria-label', 'Remover receita ' + it.desc);
        btn.addEventListener('click', () => { state.receitas.splice(idx,1); salvar(); render(); });
        tbodyReceitas.appendChild(row);
      });

    tbodyDespesas.innerHTML = '';
    state.despesas
      .sort((a,b) => a.data.localeCompare(b.data))
      .forEach((it, idx) => {
        const row = tpl.content.cloneNode(true);
        const tds = row.querySelectorAll('td');
        tds[0].textContent = it.data;
        tds[1].textContent = it.desc;
        tds[2].textContent = moeda(it.valor);
        const btn = row.querySelector('button.remover');
        btn.setAttribute('aria-label', 'Remover despesa ' + it.desc);
        btn.addEventListener('click', () => { state.despesas.splice(idx,1); salvar(); render(); });
        tbodyDespesas.appendChild(row);
      });
  }

  // Formulários
  function getValores(form) {
    const [dataInput, descInput, valorInput] = form.querySelectorAll('input');
    const data = dataInput.value;
    const desc = descInput.value.trim();
    const valor = parseFloat(valorInput.value.replace(',', '.'));
    return { data, desc, valor, dataInput, descInput, valorInput };
  }

  function validar({ data, desc, valor }) {
    const erros = [];
    if (!data) erros.push('Informe a data.');
    if (!desc) erros.push('Informe a descrição.');
    if (!Number.isFinite(valor) || valor < 0) erros.push('Informe um valor válido (>= 0).');
    return erros;
  }

  byId('form-receita').addEventListener('submit', (e) => {
    e.preventDefault();
    const v = getValores(e.currentTarget);
    const erros = validar(v);
    if (erros.length) { alert(erros.join('\\n')); return; }
    state.receitas.push({ data: v.data, desc: v.desc, valor: v.valor });
    salvar(); render();
    v.dataInput.value = ''; v.descInput.value = ''; v.valorInput.value = '';
    v.dataInput.focus();
  });

  byId('form-despesa').addEventListener('submit', (e) => {
    e.preventDefault();
    const v = getValores(e.currentTarget);
    const erros = validar(v);
    if (erros.length) { alert(erros.join('\\n')); return; }
    state.despesas.push({ data: v.data, desc: v.desc, valor: v.valor });
    salvar(); render();
    v.dataInput.value = ''; v.descInput.value = ''; v.valorInput.value = '';
    v.dataInput.focus();
  });

  // Inicialização
  selecionarAba('receitas');
  render();
  </script>
</body>
</html>
"""

readme_md = """# Gestão MEI Fácil ☕💼

Aplicação web desenvolvida como parte do projeto **APOIO À GESTÃO FINANCEIRA E FISCAL DE MEIs POR MEIO DE SOLUÇÃO TECNOLÓGICA**.  
O objetivo é apoiar microempreendedores individuais (MEIs) no controle de receitas, despesas e obrigações fiscais, por meio de uma interface simples, acessível e responsiva.

---

## 🚀 Tecnologias utilizadas
- **HTML5** → Estrutura semântica e acessível.
- **Tailwind CSS** → Estilização responsiva e moderna.
- **JavaScript (básico)** → Dinamismo e interatividade.
- **GitHub** → Controle de versão e colaboração.

---

## 📌 Funcionalidades
- Tela inicial responsiva com cabeçalho, descrição e botão de ação.
- Registro de **receitas** e **despesas** com armazenamento no **localStorage**.
- Cálculo automático de **totais** e **saldo**.
- Layout adaptado para **desktop, tablet e mobile**.

---

## 📂 Estrutura do projeto
